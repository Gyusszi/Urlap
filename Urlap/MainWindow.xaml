<Window x:Class="Urlap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Urlap"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<StackPanel>
			<TextBlock Text="Válaszd ki a pizza tészta alapját:"/>
		<ListBox x:Name="lst_teszta" Height="65">
			<ListBoxItem Content="Vékony"/>
			<ListBoxItem Content="Normál"/>
			<ListBoxItem Content="Extra vastag"/>
		</ListBox>

		<TextBlock Text="Válaszd ki a pizza méretét:" Margin="0,10,0,0"/>
		<ComboBox x:Name="cmbMeret" Width="150">
			<ComboBoxItem Content="Kicsi"/>
			<ComboBoxItem Content="Közepes"/>
			<ComboBoxItem Content="Nagy"/>
		</ComboBox>
		</StackPanel>
	</Grid>
</Window>
